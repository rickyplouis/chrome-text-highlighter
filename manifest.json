{
 "name": "Chrome Text Highlighter",
 "version": "0.1",
 "description": "Highlight text",
 "manifest_version": 2,
 "browser_action": {
   "default_title": "Selected Text",
   "default_icon": "icon.png",
   "default_popup": "popup.html"
 },
 "permissions": [
   "tabs",
   "<all_urls>"
 ],
 "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["jquery-3.2.1.min.js", "selection.js"],
     "run_at": "document_start",
     "all_frames": true
   }
 ]
}
